<Page
	x:Class="SDKTemplateCS.ScenarioOutput2"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="350"
	d:DesignWidth="400">

    <StackPanel Margin="0,0,-134,73">
        <StackPanel Orientation="Vertical" Margin="0,0,325,0">
            <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,330,0">
                <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Check to cause authentication to fail " VerticalAlignment="Center" Width="272" Canvas.Left="-10" Canvas.Top="10"/>
                <CheckBox x:Name="AuthenticationFailCheck" Content ="Yes/No" Canvas.Left="279" Canvas.Top="-6" Width="96"/>
            </Canvas>
        </StackPanel>

        <StackPanel Orientation="Vertical">
            <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0" >
                <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="User Name : " VerticalAlignment="Center" Width="168" Canvas.Left="-10" Canvas.Top="10"/>
                <TextBox x:Name="InputUserNameValue" Width="188" Height="30" Canvas.Left="280" Canvas.Top="4"/>
            </Canvas>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Password: " VerticalAlignment="Center" Width="104" Canvas.Left="-10" Canvas.Top="10"/>
                <PasswordBox x:Name="InputPasswordValue" Width="188" Height="30" Canvas.Left="280" Canvas.Top="4"/>
            </Canvas>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,317,0">
                <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Check to save your credential : " VerticalAlignment="Center" Width="287" Canvas.Left="-10" Canvas.Top="10"/>
                <CheckBox x:Name="SaveCredCheck" Content ="Yes/No" Canvas.Left="280" Width="103" Height="37" Canvas.Top="-6"/>
            </Canvas>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Message: " VerticalAlignment="Center" Width="89" Canvas.Left="-10" Canvas.Top="10"/>
                <TextBox x:Name="ErrorMessage" HorizontalAlignment="Left" Height="15" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="398" Canvas.Left="69" Canvas.Top="6"/>
            </Canvas>
        </StackPanel>
    </StackPanel>
</Page>