<Page
	x:Class="SDKTemplateCS.ScenarioInput2"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<StackPanel Margin="0,0,-225,0">
		<TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Connect to Twitter using the OAuth protocol for authentication and authorization."/>		
        <StackPanel Orientation="Horizontal">
			<TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Consumer Key     : " VerticalAlignment="Bottom"/>
			<TextBox x:Name="TwitterClientID" Height="14" Width="370" Text=""/>
		</StackPanel>
        <StackPanel Orientation="Horizontal">
			<TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Consumer Secret : " VerticalAlignment="Bottom"/>
			<TextBox x:Name="TwitterClientSecret" Height="14" Width="370" Text=""/>
		</StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Callback URL        : " VerticalAlignment="Bottom"/>
            <TextBox x:Name="TwitterCallbackUrl" Height="14" Width="370" Text=""/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
			<Button x:Name="Launch" Content="Launch" Margin="0,0,10,0" Click="Launch_Click"/>
        </StackPanel>
	</StackPanel>
</Page>