<Page
    x:Class="CredentialPickerCPP.ScenarioInput1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="1366"
    d:DesignHeight="768">

    <!-- Replace the markup below with your specific markup. -->
    <StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Message:" VerticalAlignment="Bottom" Width="75"/>
                <TextBox Name="Message" Text="Message to user" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Target:" VerticalAlignment="Bottom" Width="75"/>
                <TextBox Name="Target" Text="contoso.com" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="Launch" Content="Launch" Margin="0,0,10,0" Click="Launch_Click"/>
            </StackPanel>
            </StackPanel> 
    </StackPanel>
</Page>