<Page
	x:Class="SDKTemplateCS.ScenarioInput4"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<!-- Replace the markup below with your specific markup. -->
    <StackPanel x:Name="Scenario4Input">
        <TextBlock Style="{StaticResource DescriptionTextStyle}" TextWrapping="Wrap" Text="Clicking the button below will fire a click event handled by S4Button1_Click in MainPage.xaml.cs. This method will delete all credentials stored by this application.  It will the display the number of credentials in the PasswordVault, which should be 0.  Allowing users to remove all saved credentials is a recommended behavior for all apps that use the PasswordVault." />
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <Button x:Name="Scenario4Button" Content="Delete all credentials" Click ="Scenario4Button_Click" Margin="0,0,10,0"/>
            <TextBox x:Name="DeleteSummary" HorizontalAlignment="Left" Height="15" Width="332" />
        </StackPanel>
    </StackPanel>
</Page>