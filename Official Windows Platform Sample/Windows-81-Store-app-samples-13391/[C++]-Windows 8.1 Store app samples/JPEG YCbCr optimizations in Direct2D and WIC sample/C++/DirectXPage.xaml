<Page
    x:Class="JpegYCbCrOptimizations.DirectXPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JpegYCbCrOptimizations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <SwapChainBackgroundPanel x:Name="swapChainBackgroundPanel">
        <!-- The SwapChainBackgroundPanel must be the root of your page. Add your content inside this tag. -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
            <!-- DirectX Sample Overlay -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image Source="windowstitle-sdk.png" Width="64" Height="64" Margin="8,8,0,8"></Image>
                <TextBlock Margin="8,14,8,0" FontSize="36" FontFamily="Segoe UI" FontWeight="Light" x:Name="TitleText"></TextBlock>
            </StackPanel>
            <!-- Sample input -->
            <CheckBox x:Name="ForceBgraCheckBox" Margin="8,8,0,8" Content="Force BGRA mode" Click="OnForceBgraClicked"></CheckBox>
        </StackPanel>
    </SwapChainBackgroundPanel>
</Page>
