<common:LayoutAwarePage
    x:Class="SDKSample.EAS.Scenario2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKSample.EAS"
    xmlns:common="using:SDKSample.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Input" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="InputTextBlock1" Grid.Row="0" TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" HorizontalAlignment="Left">
                This scenario provides an example how mail client provision a device with supplied EAS policies. 
                Mail client can check if current device settings are compliant with EAS policies required by EAS 
                server.
            </TextBlock>
            <StackPanel Orientation="Horizontal" Margin="10,20,803,-30" Grid.Row="1">
                <Button x:Name="Launch2" Content="Launch" Margin="0,0,10,0" Click="Launch_Click2"/>
                <Button x:Name="Reset2" Content="Reset" Margin="0,0,10,0" Click="Reset_Click2"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="Output" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="Policy Name " VerticalAlignment="Center" Width="642" Canvas.Left="0" Canvas.Top="0"/>
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="Requested Value " VerticalAlignment="Center" Width="642" Canvas.Left="300" Canvas.Top="0"/>
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="Compliance Result " VerticalAlignment="Center" Width="642" Canvas.Left="500" Canvas.Top="0"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="RequireEncryption (True/False) " VerticalAlignment="Center" Width="223" Canvas.Left="0" Canvas.Top="50"/>
                    <TextBox x:Name="RequireEncryptionResult1" Width="160" Height="30" Canvas.Left="500"  Canvas.Top="37"/>
                    <CheckBox x:Name="RequireEncryptionValue1" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="30" Height="20" Canvas.Left="328" Canvas.Top="19"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0" >
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="MinPasswordLength (0-16) : " VerticalAlignment="Center" Width="231" Canvas.Left="0" Canvas.Top="100"/>
                    <TextBox x:Name="MinPasswordLengthValue1" Width="100" Height="30" Canvas.Left="303" Canvas.Top="87"/>
                    <TextBox x:Name="MinPasswordLengthResult1" Width="160" Height="30" Canvas.Left="500"  Canvas.Top="87"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="DisallowConvenienceLogon (True/False) : " VerticalAlignment="Center" Width="289" Canvas.Left="0" Canvas.Top="150"/>
                    <TextBox x:Name="DisallowConvenienceLogonResult1" Width="160" Height="30" Canvas.Left="500"  Canvas.Top="137"/>
                    <CheckBox x:Name="DisallowConvenienceLogonValue1" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="30" Height="20" Canvas.Left="328" Canvas.Top="132"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="MinPasswordComplexCharacters (0-4) : " VerticalAlignment="Center" Width="278" Canvas.Left="0" Canvas.Top="200"/>
                    <TextBox x:Name="MinPasswordComplexCharactersValue1" Width="100" Height="30" Canvas.Left="303" Canvas.Top="187"/>
                    <TextBox x:Name="MinPasswordComplexCharactersResult1" Width="160" Height="30" Canvas.Left="500" Canvas.Top="187"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="PasswordExpiration (0-999 days): " VerticalAlignment="Center" Width="260" Canvas.Left="0" Canvas.Top="250"/>
                    <TextBox x:Name="PasswordExpirationValue1" Width="100" Height="30" Canvas.Left="303" Canvas.Top="237"/>
                    <TextBox x:Name="PasswordExpirationResult1" Width="160" Height="30" Canvas.Left="500" Canvas.Top="237"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="PasswordHistory (0-24) : " VerticalAlignment="Center" Width="240" Canvas.Left="0" Canvas.Top="300"/>
                    <TextBox x:Name="PasswordHistoryValue1" Width="100" Height="30" Canvas.Left="303" Canvas.Top="287"/>
                    <TextBox x:Name="PasswordHistoryResult1" Width="160" Height="30" Canvas.Left="500" Canvas.Top="287"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="MaxPasswordFailedAttempts (0, 4-999): " VerticalAlignment="Center" Width="286" Canvas.Left="0" Canvas.Top="350"/>
                    <TextBox x:Name="MaxPasswordFailedAttemptsValue1" Width="100" Height="30" Canvas.Left="303" Canvas.Top="337"/>
                    <TextBox x:Name="MaxPasswordFailedAttemptsResult1" Width="160" Height="30" Canvas.Left="500" Canvas.Top="337"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Text="MaxInactivityTimeLock (0-599940 secs): " VerticalAlignment="Center" Width="286" Canvas.Left="0" Canvas.Top="400"/>
                    <TextBox x:Name="MaxInactivityTimeLockValue1" Width="100" Height="30" Canvas.Left="303" Canvas.Top="387"/>
                    <TextBox x:Name="MaxInactivityTimeLockResult1" Width="160" Height="30" Canvas.Left="500" Canvas.Top="387"/>
                </Canvas>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="116,-10,-116,10">
                <Canvas VerticalAlignment="Center" Height="40" Margin="10,0,0,0">
                    <TextBox x:Name="DebugArea" Width="677" Height="30" Canvas.Left="-111" Canvas.Top="438"/>
                </Canvas>
            </StackPanel>
        </Grid>

        <!-- Add Storyboards to the visual states below as necessary for supporting the various layouts -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>
                <VisualState x:Name="FullScreenPortrait"/>
                <VisualState x:Name="Snapped"/>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

    </Grid>
</common:LayoutAwarePage>
